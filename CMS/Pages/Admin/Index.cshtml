@page
@model CMS.Pages.Admin.IndexModel
@{
    ViewBag.Title = "Manage Items";
}

<h3>Items</h3> 
<a asp-page="Add" class="btn btn-success">Add Item</a>
<hr />
<div class="row">
  <div class="col-md-9">
    <table class="table table-hover">
      <thead>
      <thead>
        <partial name="_ItemTableHeader"/>
      </thead>
      <tbody>
        <partial name="_ItemTable" model="Model.Items"/>
      </tbody>
    </table>
  </div>

  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Categories</h5>
        <partial name="_Categories"/>
      </div>
    </div>
  </div>
</div>

